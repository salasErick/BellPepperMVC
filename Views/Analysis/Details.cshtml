@model BellPepperMVC.Controllers.AnalysisDetailsViewModel
@{
    ViewData["Title"] = "Analysis Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Analysis Results</h1>

    <!-- Basic Information -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="h5 mb-0">Basic Information</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>File Name:</strong> @Model.FileName</p>
                    <p><strong>Upload Date:</strong> @Model.UploadDate.ToString("g")</p>
                    <p>
                        <strong>Maturity Level:</strong>
                        <span class="badge badge-primary">@Model.PredictedMaturityLevel</span>
                    </p>
                    <p>
                        <strong>Confidence:</strong>
                        <span class="badge badge-info">@(Model.PredictionConfidence.ToString("P2"))</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Original and Processed Images -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="h5 mb-0">Images</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <h3 class="h6">Original Image</h3>
                    <img src="@Model.OriginalImageUrl" alt="Original Image" class="img-fluid rounded shadow-sm">
                </div>
                @if (Model.HasDetailedAnalysis)
                {
                    <div class="col-md-6 mb-3">
                        <h3 class="h6">Processed Image</h3>
                        <img src="@Model.ProcessedImageUrl" alt="Processed Image" class="img-fluid rounded shadow-sm">
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- FFT Spectrum Analysis -->
    @if (Model.HasSpectrumImages)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="h5 mb-0">FFT Spectrum Analysis</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h3 class="h6">Red Channel Spectrum</h3>
                        <img src="@Model.SpectrumRUrl" alt="Red Channel Spectrum" class="img-fluid rounded shadow-sm">
                    </div>
                    <div class="col-md-6 mb-3">
                        <h3 class="h6">Green Channel Spectrum</h3>
                        <img src="@Model.SpectrumGUrl" alt="Green Channel Spectrum" class="img-fluid rounded shadow-sm">
                    </div>
                    <div class="col-md-6 mb-3">
                        <h3 class="h6">Blue Channel Spectrum</h3>
                        <img src="@Model.SpectrumBUrl" alt="Blue Channel Spectrum" class="img-fluid rounded shadow-sm">
                    </div>
                    <div class="col-md-6 mb-3">
                        <h3 class="h6">Combined RGB Spectrum</h3>
                        <img src="@Model.SpectrumCombinedUrl" alt="Combined RGB Spectrum" class="img-fluid rounded shadow-sm">
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Inverse FFT -->
    @if (Model.HasInverseFFT)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="h5 mb-0">Inverse FFT</h2>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <img src="@Model.InverseFFTUrl" alt="Inverse FFT" class="img-fluid rounded shadow-sm">
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Sobel Filters -->
    @if (Model.HasSobelFilters)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="h5 mb-0">Edge Detection (Sobel Filters)</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h3 class="h6">Horizontal Edges (H1)</h3>
                        <img src="@Model.SobelH1Url" alt="Sobel H1" class="img-fluid rounded shadow-sm">
                    </div>
                    <div class="col-md-6 mb-3">
                        <h3 class="h6">Vertical Edges (H2)</h3>
                        <img src="@Model.SobelH2Url" alt="Sobel H2" class="img-fluid rounded shadow-sm">
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Detailed Features -->
    @if (Model.HasDetailedAnalysis && Model.DetailedFeatures != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="h5 mb-0">Detailed Analysis Features</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Max Value</h6>
                                <p class="card-text h4">@Model.DetailedFeatures.MaxValue.ToString("F2")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Min Value</h6>
                                <p class="card-text h4">@Model.DetailedFeatures.MinValue.ToString("F2")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Standard Deviation</h6>
                                <p class="card-text h4">@Model.DetailedFeatures.StdValue.ToString("F2")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Mean Value</h6>
                                <p class="card-text h4">@Model.DetailedFeatures.MeanValue.ToString("F2")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Median Value</h6>
                                <p class="card-text h4">@Model.DetailedFeatures.MedianValue.ToString("F2")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add click handler for images to show them in a modal
            $('img').click(function() {
                var imgSrc = $(this).attr('src');
                var imgAlt = $(this).attr('alt');

                // Create modal if it doesn't exist
                if ($('#imageModal').length === 0) {
                    var modalHtml = `
                        <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title"></h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <img src="" class="img-fluid" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>`;
                    $('body').append(modalHtml);
                }

                // Update modal content
                $('#imageModal .modal-title').text(imgAlt);
                $('#imageModal .modal-body img').attr('src', imgSrc);
                $('#imageModal .modal-body img').attr('alt', imgAlt);

                // Show modal
                $('#imageModal').modal('show');
            });
        });
    </script>
}